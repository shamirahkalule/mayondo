doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Register Furniture - MAYONDO WOOD &amp; FURNITURE
  style.
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, sans-serif;
    }
    body {
    background-color: #fff;
    color: #000;
    margin: 0 100px;
    min-height: 100vh;
    padding: 10px;
    display: flex;
    flex-direction: column;
    }
  
    /* Form Styles */
    .form-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 40px;
    margin-top: 40px;
    }
    .form {
    width: 100%;
    max-width: 600px;
    padding: 30px;
    border: 1px solid #000;
    border-radius: 8px;
    }
    .form h3 {
    text-align: center;
    margin-bottom: 25px;
    font-size: 22px;
    }
    .form-group {
    margin-bottom: 20px;
    }
    .form label {
    display: block;
    margin-bottom: 8px;
    font-weight: bold;
    font-size: 14px;
    }
    .form input,
    .form select {
    width: 100%;
    padding: 12px;
    border: 1px solid #000;
    border-radius: 4px;
    font-size: 14px;
    }
    .form button {
    width: 100%;
    padding: 14px;
    background-color: #000;
    color: #fff;
    border: none;
    border-radius: 4px;
    font-weight: bold;
    cursor: pointer;
    margin-top: 10px;
    font-size: 16px;
    transition: background-color 0.3s ease;
    }
    .form button:hover {
    background-color: #333;
    }
    
    /* Mobile responsiveness */
    @media (max-width: 768px) {
    body {
    margin: 0 20px;
    }
    .form {
    padding: 20px;
    }
    
    .footer-content {
    flex-direction: column;
    }
    }
    @media (max-width: 480px) {
    body {
    margin: 0 15px;
    }
    .form {
    padding: 15px;
    }
    .form h3 {
    font-size: 20px;
    }
    }
// Navigation
include ../components/nav
.form-container
  .form
    form(action='/regfurniture' method='POST' enctype='multipart/form-data')
      h3 Register Furniture
      .form-group
        label(for='productType') Product Type
        input#productType(type='text' name='productType' placeholder='Enter product type' required='')
      .form-group
        label(for='name') Name
        input#name(type='text' name='name' placeholder='Enter furniture name' required='')
      .form-group
        label(for='quantity') Quantity
        input#quantity(type='number' name='quantity' placeholder='Enter quantity' required='')
      .form-group
        label(for='costPrice') Cost Price
        input#costPrice(type='number' name='costPrice' placeholder='Enter unit cost' required='')
      .form-group
        label(for='productPrice') Product Price
        input#productPrice(type='number' name='productPrice' placeholder='Enter product price' required='')
      .form-group
        label(for='supplierName') Supplier Name
        input#supplierName(type='text' name='supplierName' placeholder='Enter supplier name' required='')
      .form-group
        label(for='date') Date
        input#date(type='date' name='date' required='')
      .form-group
        label(for='productQuality') Product Quality
        input#productQuality(type='text' name='productQuality' placeholder='Enter product quality' required='')
      .form-group
        label(for='color') Color
        input#color(type='text' name='color' placeholder='Enter product color')
      .form-group
        label(for='measurement') Measurements
        input#measurement(type='number' name='measurement' placeholder='Enter product measurement')
      .form-group
        label(for='image') Upload Image
        input#image(type='file' name='image' accept='image/*')
      button(type='submit') Submit
  include ../components/footer
