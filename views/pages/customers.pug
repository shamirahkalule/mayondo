doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Customers - MAYONDO WOOD &amp; FURNITURE
  style.
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }
    body {
      background-color: #fff;
      color: #000;
      margin: 0 100px;
      min-height: 100vh;
      padding: 10px;
      display: flex;
      flex-direction: column;
    }
    .page-header {
      text-align: center;
      margin: 30px 0;
    }
    .page-header h1 {
      font-size: 28px;
      font-weight: bold;
    }
    .customers-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 20px;
      margin-bottom: 50px;
    }
    .customer-card {
      border: 2px solid #000;
      border-radius: 4px;
      padding: 20px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .customer-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
    }
    .customer-card h3 {
      font-size: 20px;
      font-weight: bold;
      margin-bottom: 15px;
      padding-bottom: 10px;
      border-bottom: 2px solid #000;
    }
    .customer-card p {
      margin: 8px 0;
      font-size: 14px;
      color: #333;
    }
    .customer-card p strong {
      color: #000;
      font-weight: bold;
      min-width: 70px;
      display: inline-block;
    }
    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #666;
      border: 1px solid #e0e0e0;
      border-radius: 4px;
      margin-top: 20px;
    }
    .empty-state p {
      font-size: 16px;
      margin-bottom: 20px;
    }
    .add-customer-btn {
      display: inline-block;
      padding: 12px 24px;
      background-color: #000;
      color: #fff;
      text-decoration: none;
      border-radius: 4px;
      font-weight: bold;
      transition: background-color 0.3s ease;
    }
    .add-customer-btn:hover {
      background-color: #333;
    }
    @media (max-width: 768px) {
      body {
        margin: 0 20px;
      }
      .customers-grid {
        grid-template-columns: 1fr;
      }
    }

body 
  include ../components/nav

  .page-header
    h1 All Customers

  if customers && customers.length
    .customers-grid
      each customer in customers
        .customer-card
          h3= customer.name
          p
            strong Contact:
            |  #{customer.contact}
          p
            strong Location:
            |  #{customer.location}
          if customer.email
            p
              strong Email:
              |  #{customer.email}
  else
    .empty-state
      p No customers yet
      p Add your first customer to get started!
      a.add-customer-btn(href='/addcustomer') Add Customer

  include ../components/footer