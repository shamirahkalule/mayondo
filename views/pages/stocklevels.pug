doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Stock Levels - MAYONDO WOOD &amp; FURNITURE
  style.
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, sans-serif;
    }
    body {
    background-color: #fff;
    color: #000;
    margin: 0 100px;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    }
    .page-header {
    text-align: center;
    margin: 30px 0;
    }
    .page-header h1 {
    font-size: 28px;
    font-weight: bold;
    }
    .stock-section {
    margin-bottom: 50px;
    }
    .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 2px solid #000;
    }
    .section-header h2 {
    font-size: 22px;
    font-weight: bold;
    }
    .stock-summary {
    display: flex;
    gap: 15px;
    margin-bottom: 20px;
    }
    .summary-card {
    flex: 1;
    padding: 15px;
    border: 1px solid #000;
    border-radius: 4px;
    text-align: center;
    }
    .summary-card h3 {
    font-size: 14px;
    margin-bottom: 8px;
    color: #666;
    }
    .summary-card .count {
    font-size: 24px;
    font-weight: bold;
    }
    .table-container {
    overflow-x: auto;
    }
    .stock-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
    }
    .stock-table th {
    background-color: #f5f5f5;
    border: 1px solid #000;
    padding: 12px 8px;
    text-align: left;
    font-weight: bold;
    font-size: 14px;
    }
    .stock-table td {
    border: 1px solid #000;
    padding: 12px 8px;
    font-size: 14px;
    }
    .stock-table tr.low-stock {
    background-color: #ffebee;
    }
    .stock-table tr.warning-stock {
    background-color: #fff3e0;
    }
    .status-low {
    color: #d32f2f;
    font-weight: bold;
    }
    .status-warning {
    color: #f57c00;
    font-weight: bold;
    }
    .status-good {
    color: #388e3c;
    font-weight: bold;
    }
    .empty-state {
    text-align: center;
    padding: 40px;
    color: #666;
    border: 1px solid #e0e0e0;
    border-radius: 4px;
    }
    @media (max-width: 768px) {
    body {
    margin: 0 20px;
    }
    .stock-summary {
    flex-direction: column;
    }
    }

include ../components/nav

.page-header
  h1 Stock Levels

.stock-section
  .section-header
    h2 Furniture Stock
    
  .stock-summary
    .summary-card
      h3 Total Items
      .count= furnitureStats.total
    .summary-card
      h3 Low Stock Items
      .count.status-low= furnitureStats.lowStock
    .summary-card
      h3 Warning Items
      .count.status-warning= furnitureStats.warning
    .summary-card
      h3 Good Stock
      .count.status-good= furnitureStats.good
      
  .table-container
    if furniture && furniture.length > 0
      table.stock-table
        thead
          tr
            th Product Name
            th Type
            th Quantity
            th Cost Price
            th Selling Price
            th Status
        tbody
          each item in furniture
            tr(class=item.quantity < 5 ? 'low-stock' : (item.quantity < 10 ? 'warning-stock' : ''))
              td= item.name
              td= item.productType
              td= item.quantity
              td UGX #{item.costPrice.toLocaleString()}
              td UGX #{item.productPrice.toLocaleString()}
              td(class=item.quantity < 5 ? 'status-low' : (item.quantity < 10 ? 'status-warning' : 'status-good'))
                if item.quantity < 5
                  |  LOW STOCK
                else if item.quantity < 10
                  | Warning
                else
                  | Good
    else
      .empty-state
        p No furniture stock available

.stock-section
  .section-header
    h2 Wood Stock
    
  .stock-summary
    .summary-card
      h3 Total Items
      .count= woodStats.total
    .summary-card
      h3 Low Stock Items
      .count.status-low= woodStats.lowStock
    .summary-card
      h3 Warning Items
      .count.status-warning= woodStats.warning
    .summary-card
      h3 Good Stock
      .count.status-good= woodStats.good
      
  .table-container
    if wood && wood.length > 0
      table.stock-table
        thead
          tr
            th Wood Name
            th Type
            th Quantity
            th Cost Price
            th Selling Price
            th Status
        tbody
          each item in wood
            tr(class=item.quantity < 5 ? 'low-stock' : (item.quantity < 10 ? 'warning-stock' : ''))
              td= item.woodName
              td= item.woodType
              td= item.quantity
              td UGX #{item.costPrice.toLocaleString()}
              td UGX #{item.productPrice.toLocaleString()}
              td(class=item.quantity < 5 ? 'status-low' : (item.quantity < 10 ? 'status-warning' : 'status-good'))
                if item.quantity < 5
                  |  LOW STOCK
                else if item.quantity < 10
                  | Warning
                else
                  | Good
    else
      .empty-state
        p No wood stock available

include ../components/footer