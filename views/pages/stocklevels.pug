doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Stock Levels - MAYONDO WOOD &amp; FURNITURE
  style.
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, sans-serif;
    }
    body {
    background-color: #fff;
    color: #000;
    margin: 0 100px;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    }
    /* Navigation Styles */
    .navbar {
    background-color: #fff;
    border-bottom: 1px solid #000;
    padding: 15px 0;
    margin-bottom: 30px;
    }
    .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    }
    .logo {
    font-size: 24px;
    font-weight: bold;
    }
    .nav-links {
    display: flex;
    gap: 20px;
    }
    .nav-links a {
    color: #000;
    text-decoration: none;
    font-weight: bold;
    }
    .nav-links a:hover {
    text-decoration: underline;
    }
    /* Page Header */
    .page-header {
    text-align: center;
    margin-bottom: 40px;
    }
    .page-header h1 {
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 10px;
    }
    /* Stock Sections */
    .stock-section {
    margin-bottom: 50px;
    }
    .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 2px solid #000;
    }
    .section-header h2 {
    font-size: 22px;
    font-weight: bold;
    }
    .stock-summary {
    display: flex;
    gap: 15px;
    margin-bottom: 20px;
    }
    .summary-card {
    flex: 1;
    padding: 15px;
    border: 1px solid #000;
    border-radius: 4px;
    text-align: center;
    }
    .summary-card h3 {
    font-size: 14px;
    margin-bottom: 8px;
    color: #666;
    }
    .summary-card .count {
    font-size: 24px;
    font-weight: bold;
    }
    /* Table Styles */
    .table-container {
    overflow-x: auto;
    }
    .stock-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
    }
    .stock-table th {
    background-color: #f5f5f5;
    border: 1px solid #000;
    padding: 12px 8px;
    text-align: left;
    font-weight: bold;
    font-size: 14px;
    }
    .stock-table td {
    border: 1px solid #000;
    padding: 12px 8px;
    font-size: 14px;
    }
    .stock-table tr.low-stock {
    background-color: #ffebee;
    }
    .stock-table tr.warning-stock {
    background-color: #fff3e0;
    }
    .status-low {
    color: #d32f2f;
    font-weight: bold;
    }
    .status-warning {
    color: #f57c00;
    font-weight: bold;
    }
    .status-good {
    color: #388e3c;
    font-weight: bold;
    }
    .empty-state {
    text-align: center;
    padding: 40px;
    color: #666;
    border: 1px solid #e0e0e0;
    border-radius: 4px;
    }
    /* Footer Styles */
    .footer {
    background-color: #fff;
    border-top: 1px solid #000;
    padding: 20px 0;
    text-align: center;
    margin-top: auto;
    }
    .footer-content {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    }
    .footer-section {
    flex: 1;
    min-width: 200px;
    margin-bottom: 20px;
    }
    .footer-section h4 {
    margin-bottom: 15px;
    font-size: 16px;
    }
    .footer-section p, .footer-section a {
    color: #666;
    font-size: 14px;
    text-decoration: none;
    }
    .footer-section a:hover {
    text-decoration: underline;
    }
    .copyright {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid #e0e0e0;
    color: #666;
    font-size: 14px;
    }
    /* Mobile responsiveness */
    @media (max-width: 768px) {
    body {
    margin: 0 20px;
    }
    .nav-container {
    flex-direction: column;
    gap: 15px;
    }
    .stock-summary {
    flex-direction: column;
    }
    .section-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
    }
    .footer-content {
    flex-direction: column;
    }
    }
    @media (max-width: 480px) {
    body {
    margin: 0 15px;
    }
    .page-header h1 {
    font-size: 24px;
    }
    .section-header h2 {
    font-size: 20px;
    }
    .stock-table {
    font-size: 12px;
    }
    .stock-table th,
    .stock-table td {
    padding: 8px 4px;
    }
    }
