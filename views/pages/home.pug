doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Mayondo Wood &amp; Furniture
    style.
      body {
        margin: 0 100px;
        padding: 0;
      }

      /* Page container */
      .page-container {
        margin: 20px 100px; /* top/bottom 20px, left/right 40px */
      }

      /* Row 1 custom split */
      .row1 {
        display: grid;
        grid-template-columns: calc(40% - 7px) calc(30% - 7px) calc(30% - 6px);
        grid-auto-rows: 200px;
        gap: 10px;
        margin-bottom: 10px;
      }

      /* Main grid for rows 2â€“4 */
      .grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-auto-rows: 200px;
        gap: 10px;
      }

      /* Hero image height */
      .hero {
        grid-column: span 3;
        grid-row: span 2;
      }

      .grid img,
      .row1 img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .span-rows {
        grid-row: span 2;
        grid-column: 3;
      }

      @media (max-width: 768px) {
      .page-container {
        margin: 20px 5px; /* small side margins */
        display: flex;
        flex-direction: column;
        gap: 10px; /* vertical spacing between images */
      }

      /* Stack images */
      .row1,
      .grid {
        display: flex;
        flex-direction: column;
        gap: 10px;
      }

      /* Hero first */
      .hero {
        order: -1; /* push hero to top */
        width: calc(100% - 10px);
        height: auto; /* let height adjust */
      }

      /* All other images */
      .row1 img,
      .grid img:not(.hero) {
        width: calc(100% - 10px);
        height: auto;
      }

      /* Remove grid specific spans for mobile */
      .span-rows {
        grid-row: auto;
        grid-column: auto;
      }
      }

  body
    include ../components/nav

    .page-container
      // ROW 1
      .row1
        img(src='img1.jpg')
        img(src='img2.jpg')
        img(src='img3.jpg')

      // MAIN GRID
      .grid
        img.hero(src='img4.jpg')

        // Row 3
        img(src='img5.jpg')
        img(src='img6.jpg')
        img.span-rows(src='img9.jpg')

        // Row 4
        img(src='img7.jpg')
        img(src='img8.jpg')

    include ../components/footer
