script.
  // Line chart configuration for Sales and Customers
  const lineChartConfig = {
  type: 'line',
  options: {
  responsive: true,
  maintainAspectRatio: false,
  plugins: {
  legend: {
  display: false
  },
  tooltip: {
  enabled: true,
  displayColors: false,
  backgroundColor: 'rgba(0, 0, 0, 0.8)',
  padding: 8,
  bodyFont: {
  size: 11
  },
  callbacks: {
  title: () => ''
  }
  }
  },
  interaction: {
  intersect: false,
  mode: 'index'
  },
  scales: {
  x: {
  display: false,
  grid: {
  display: false
  }
  },
  y: {
  display: false,
  grid: {
  display: false
  },
  beginAtZero: false
  }
  },
  elements: {
  point: {
  radius: 2,
  hitRadius: 8,
  hoverRadius: 4,
  backgroundColor: '#ffffff'
  },
  line: {
  tension: 0.3,
  borderWidth: 2
  }
  }
  }
  };
  // Bar chart configuration for Stock
  const barChartConfig = {
  type: 'bar',
  options: {
  responsive: true,
  maintainAspectRatio: false,
  plugins: {
  legend: {
  display: false
  },
  tooltip: {
  enabled: true,
  displayColors: false,
  backgroundColor: 'rgba(0, 0, 0, 0.8)',
  padding: 8,
  bodyFont: {
  size: 11
  }
  }
  },
  scales: {
  x: {
  display: true,
  grid: {
  display: false
  },
  ticks: {
  color: '#666666',
  font: {
  size: 10
  }
  }
  },
  y: {
  display: true,
  beginAtZero: true,
  grid: {
  color: 'rgba(0, 0, 0, 0.05)'
  },
  ticks: {
  color: '#666666',
  font: {
  size: 10
  },
  stepSize: 2
  }
  }
  }
  }
  };
  // Sales Chart
  new Chart(document.getElementById('salesChart'), {
  ...lineChartConfig,
  data: {
  labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
  datasets: [{
  data: [35, 38, 36, 40, 42, 44, 45],
  borderColor: '#22c55e',
  backgroundColor: 'transparent',
  fill: false,
  pointBackgroundColor: '#22c55e',
  pointBorderColor: '#ffffff',
  pointBorderWidth: 2
  }]
  }
  });
  // Customers Chart
  new Chart(document.getElementById('customersChart'), {
  ...lineChartConfig,
  data: {
  labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
  datasets: [{
  data: [26, 28, 27, 29, 30, 31, 32],
  borderColor: '#22c55e',
  backgroundColor: 'transparent',
  fill: false,
  pointBackgroundColor: '#22c55e',
  pointBorderColor: '#ffffff',
  pointBorderWidth: 2
  }]
  }
  });
  // Furniture Stock Chart - with conditional colors
  const furnitureData = [8, 3, 12, 2, 7, 4, 15];
  const furnitureColors = furnitureData.map(qty => qty < 5 ? '#ef4444' : '#22c55e');
  new Chart(document.getElementById('furnitureChart'), {
  ...barChartConfig,
  data: {
  labels: ['Dining Table', 'Office Chair', 'Bed Frame', 'Bookshelf', 'Sofa', 'Desk', 'Cabinet'],
  datasets: [{
  data: furnitureData,
  backgroundColor: furnitureColors,
  borderRadius: 4,
  barThickness: 30
  }]
  }
  });
  // Wood Stock Chart - with conditional colors
  const woodData = [6, 2, 10, 4, 8, 3];
  const woodColors = woodData.map(qty => qty < 5 ? '#ef4444' : '#22c55e');
  new Chart(document.getElementById('woodChart'), {
  ...barChartConfig,
  data: {
  labels: ['Mahogany', 'Oak', 'Pine', 'Teak', 'Cedar', 'Walnut'],
  datasets: [{
  data: woodData,
  backgroundColor: woodColors,
  borderRadius: 4,
  barThickness: 30
  }]
  }
  });
